// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model GameResult {
  id             String   @id @default(cuid())
  gameType       String
  player1Name    String
  player1Army    String
  player1Score   Int
  player1        User?    @relation("player1", fields: [player1Id], references: [id])
  player1Id      String?
  player2Name    String
  player2Army    String
  player2Score   Int
  player2        User?    @relation("player2", fields: [player2Id], references: [id])
  player2Id      String?
  numberOfRounds Int
  description    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([player1Id])
  @@index([player2Id])
}

model GameInProgress {
  id                     String  @id @default(cuid())
  gameType               String
  mission                String?
  player1Name            String
  player1Army            String
  player1PrimaryScore    Int     @default(0)
  player1SlayTheWarlord  Int     @default(0)
  player1FirstBlood      Int     @default(0)
  player1LastManStanding Int     @default(0)
  player1Attrition       Int     @default(0)
  player1Linebreaker     Int     @default(0)
  player1PriceOfFailure  Int     @default(0)
  player1Allegiance      String?
  player1                User?   @relation("activePlayer1", fields: [player1Id], references: [id])
  player1Id              String? @unique
  player2Name            String
  player2Army            String
  player2PrimaryScore    Int     @default(0)
  player2SlayTheWarlord  Int     @default(0)
  player2FirstBlood      Int     @default(0)
  player2LastManStanding Int     @default(0)
  player2Attrition       Int     @default(0)
  player2Linebreaker     Int     @default(0)
  player2PriceOfFailure  Int     @default(0)
  player2Allegiance      String?
  player2                User?   @relation("activePlayer2", fields: [player2Id], references: [id])
  player2Id              String? @unique
  round                  Int     @default(1)

  @@index([player1Id])
  @@index([player2Id])
}

model Group {
  id      String @id @default(cuid())
  name    String @unique
  admin   User   @relation(fields: [adminId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  members User[] @relation("members")
  invites User[] @relation("invites")
  adminId String @unique
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id             String           @id @default(cuid())
  name           String?
  email          String?          @unique
  emailVerified  DateTime?
  image          String?
  accounts       Account[]
  sessions       Session[]
  gamesAsPlayer1 GameResult[]     @relation("player1")
  gamesAsPlayer2 GameResult[]     @relation("player2")
  group          Group?           @relation("members", fields: [groupId], references: [id])
  groupId        String?
  InvitedTo      Group[]          @relation("invites")
  adminOf        Group?
  ActivePlayer1  GameInProgress[] @relation("activePlayer1")
  ActivePlayer2  GameInProgress[] @relation("activePlayer2")

  @@index([groupId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
